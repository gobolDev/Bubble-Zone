using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.SceneManagement;
/// <summary>
/// This script handles Stage movement. This script is in CampainMap Scene.
/// </summary>
public class PanelMove : MonoBehaviour
{
    public GameObject _panel01;
    public GameObject PointA;
    public GameObject _panel02;
    public GameObject PointB;
    

    private void Start()
    {
        _panel01.GetComponent<GameObject>();
        PointA.GetComponent<GameObject>();
        _panel02.GetComponent<GameObject>();
        PointB.GetComponent<GameObject>();
    }

    public void ButtonRight()
    {
        _panel02.transform.position = PointA.transform.position;
        _panel01.SetActive(false);
    }

    public void ButtonLeft()
    {
        _panel02.transform.position = PointB.transform.position;
        _panel01.SetActive(true);
    }

    public void ButtonBack()
    {
        SceneManager.LoadScene("PlayMenu");
    }
}
